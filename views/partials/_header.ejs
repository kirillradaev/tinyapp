<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
        <% if (!user) { %>
          <div class="navbar-nav">
            <form class="form-inline justify-content-sm-center" method="GET" action="/login" >
              <button type="submit" class="btn btn-success mr-3">Login</button>
            </form>
            <form class="form-inline justify-content-sm-center" method="GET" action="/register" >
              <button type="submit" class="btn btn-success">Register</button>
            </form>
          </div>
        <% } else { %>
          <form class="form-inline justify-content-sm-center align-items-baseline" method="POST" action="/logout" >
          <p1 class="mr-3">
            Logged in as: <%= user.email %>
          </p1>
          <button type="submit" class="btn btn-outline-dark">Logout</button>
          </form>
         <% } %>
    </div>
  </nav>
</header>

